<Window x:Class="TradingCompanyWpf.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingCompanyWpf"
        mc:Ignorable="d" Height="300" Width="300" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="Welcome to Trading Company!" Height="80" TextWrapping="WrapWithOverflow" Style="{StaticResource styleTitle}"/>
        <TextBlock Grid.Row="3" Text="Our contact information:" FontWeight="Bold"/>
        <TextBlock Grid.Row="4" Text="Faculty of Applied Mathematics and Informatics"/>
        <TextBlock Grid.Row="5" Text="Ivan Franko National University of Lviv"/>

        <fa:ImageAwesome Icon="university" Grid.Row="6" Height="40" Width="40" Foreground="ForestGreen"/>
        <Button Content="X" HorizontalAlignment="Right" Background="Black" Foreground="White"  VerticalAlignment="Center" Width="25" FontWeight="ExtraBlack" Click="Button_Click"
                />



    </Grid>
</Window>
